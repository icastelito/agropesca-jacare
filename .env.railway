# Environment file para Railway Production
# Configure estas variáveis no Railway Dashboard

APP_NAME="Agropesca Jacaré"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://seu-app.railway.app

LOG_CHANNEL=stack
LOG_LEVEL=error

# Database - Railway PostgreSQL
# O Railway fornece estas variáveis automaticamente
# DB_HOST, DB_PORT, DB_DATABASE, DB_USERNAME, DB_PASSWORD
DB_CONNECTION=pgsql
# Ou use a URL completa: DATABASE_URL=postgresql://...

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail - Configure com seu provedor (ex: SendGrid, Mailgun)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@agropesca.com.br"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
